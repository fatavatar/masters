<!DOCTYPE html>
<html >
<head>
  <% include ../partials/header.ejs %>
</head>

<body class="mdc-typography">
<div class="container" style="margin-top: 1em;">
<%- include('../partials/courseSelect', {config : config }); %>
<% teams.forEach(function(team) { %>
	<div class="mdc-card player-card-content">
	<div class="row">
	<div style="padding:1rem">
  <% record = config.records[config.currentTourney.year][team.name]; %>
	<h2 class="mdc-typography--headline6" style="margin:0px"> <%= team.name %> </h2>
	<h3 class="mdc-typography--subtitle2" style="color:#AAAAAA;"> (<%= record.wins + "-" + record.losses + "-" + record.ties %>) </h3>
	</div>
	
	<div class="col-4" style="border-bottom: 1px solid #ccc;margin-bottom:1em;">
	<em style="color:#999999;">Winnings: $<%= record.winnings %></em>
	</div>
	</div>
	<% team.players.forEach(function(player)  {  %>
	<div class="row">
	<div class="col-5">
		<%= player.name %>
	</div>
	<div class="col-3">
		<%= player.total %> (<%= player.today %>)
	</div>
	<div class="col-4">
		<%= player.position %> <%= player.thru %>
	</div>
	</div>
	<% }); %>
	<div class="row">
	<div class="col-12"` style="margin-top:.5em;">
	<em style="color:#999999;">Current Purse $<%= team.purse.toFixed(0) %></em>
	</div>
	</div>
	</div>
<% }); %>
</div>
  <% include ../partials/endincludes.ejs %>
</body>
</html>
