<!DOCTYPE html>
<html style="font-size:12px;">
<head>
  <% include ../partials/header.ejs %>
</head>

<body>
<div class="container" style="margin-top: 1em;">
<% teams.forEach(function(team) { %>
	<div class="row">
	<div class="col-12" style="border-bottom: 1px solid #ccc;margin-bottom:1em;">
	<h4> <%= team.name %></h4>
	</div>
	</div>
	<% team.players.forEach(function(player)  {  %>
	<div class="row">
	<div class="col-5">
		<%= player.name %>
	</div>
	<div class="col-3">
		<%= player.total %> (<%= player.today %>)
	</div>
	<div class="col-4">
		<%= player.position %> <%= player.thru %>
	</div>
	</div>
	<% }); %>
	<div class="row">
	<div class="col-12"` style="margin-top:.5em;margin-bottom:2em;">
	<em>Current Winnings $<%= team.winnings.toFixed(0) %></em>
	</div>
	</div>
	
<% }); %>
</div>
  <% include ../partials/endincludes.ejs %>
</body>
</html>
