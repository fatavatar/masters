<div class="row" style="margin-bottom: 20px">
<div class="col-6">
<form class="form-inline">
<div class="form-group">
<strong><label class="form-label" style="margin-right:15px">Select Major:</label></strong>
<select id="courseSelect" class="form-control" for="courseSelect">
<% 
config.tournaments.forEach(function(major) { 
%>
<option value="<%= major %>" <% 
if (config.tourneyData[major].selected) { 
%> selected <% 
} %> > <%= config.tourneyData[major].name %></option>
<% }); %>
</select>
</form>
</div>
</div>
<div class="col-6 text-right" style="font-size:14px;">
<% if (config.page !== 'teams') { 
%> <a href="/<%= config.currentTourney.id %>">Teams</a>
<% } else { %> Teams <% } 
%> | <% if (config.page !== 'leaderboard') { 
%> <a href="/leaderboard/<%= config.currentTourney.id %>">Leaderboard</a>
<% } else { %> Leaderboard <% } 
%> 
</div>
</div>
<script>
document.getElementById("courseSelect").onchange = function(){
	<% if (config.page === 'team') { %>
		window.location.href = '/' + this.value;
	<% } else { %>
		window.location.href = '/leaderboard/' + this.value;
	<% } %>
}
</script>
